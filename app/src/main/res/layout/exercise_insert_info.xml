<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dateView"
            android:layout_weight="1.5"
            android:onClick="setDate"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@android:drawable/editbox_background"
            android:layout_marginLeft="10dp"
            android:padding="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/timeView"
            android:onClick="setTime"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:layout_marginRight="10dp"
            android:padding="13dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Food"
        android:id="@+id/labelFood"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputTextValue"
        android:background="@android:drawable/edit_text"
        android:hint="value"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duration"
        android:id="@+id/labelDuration"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="23dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/txtStartTime"
            android:onClick="setTime"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/abc_spinner_textfield_background_material"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Start Time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/txtEndTime"
            android:onClick="setTime"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/abc_spinner_textfield_background_material"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="End Time" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Approximate Calories"
        android:id="@+id/labelAppxCal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtCalories"
            android:layout_weight="2"
            android:hint="Optional"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/buttonSave"
            android:background="@color/add_activity_button_color"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</LinearLayout>